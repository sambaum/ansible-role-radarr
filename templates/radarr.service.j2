[Unit]
Description=Radarr Daemon
After=syslog.target network.target

[Service]
User={{radarr_user}}
Group={{radarr_group}}

Type=simple
PermissionsStartOnly=true
ExecStartPre=/bin/mkdir -p /home/{{sonarr_user}}/.config/Radarr
ExecStartPre=/bin/chown {{sonarr_user}}:{{sonarr_group}} -R /home/{{sonarr_user}}/.config/Radarr
ExecStart=/usr/bin/mono /opt/Radarr/Radarr.exe -nobrowser
TimeoutStopSec=20
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target